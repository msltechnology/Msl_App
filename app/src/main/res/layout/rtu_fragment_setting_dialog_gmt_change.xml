<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/custom_ble_status_dialog_background">

    <TextView
        android:id="@+id/tv_rtu_setting_dialog_gmt_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:autoSizeTextType="uniform"
        android:layout_margin="2dp"/>

    <View style="@style/rtu_view_vertical_line_5"  />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:layout_margin="3dp">

        <Button
            android:id="@+id/btn_rtu_setting_dialog_gmt_On"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0(ENG)"
            android:textSize="28sp"
            android:background="@drawable/custom_rtu_status_change_btn"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/btn_rtu_setting_dialog_gmt_Off"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+9(KOR)"
            android:textSize="28sp"
            android:background="@drawable/custom_rtu_status_change_btn"
            android:layout_margin="5dp"/>
    </LinearLayout>



</LinearLayout>