<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="horizontal"
        android:background="@color/MSL_Blue">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/ID_setting"
            android:textColor="@color/white"
            android:textSize="32dp"
            android:textStyle="bold"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_dialog_setting_ID_1"
                style="@style/tv_setting_dialog_id" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/dialog_fl" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_dialog_setting_ID_2"
                style="@style/tv_setting_dialog_id" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/dialog_fl" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_dialog_setting_ID_3"
                style="@style/tv_setting_dialog_id" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/dialog_fl" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            tools:ignore="NestedWeights">

            <TextView
                android:id="@+id/btn_dialog_setting_ID_1"
                style="@style/btn_setting_dialog_id"
                android:text="@string/_1" />

            <TextView
                android:id="@+id/btn_dialog_setting_ID_2"
                style="@style/btn_setting_dialog_id"
                android:text="@string/_2" />

            <TextView
                android:id="@+id/btn_dialog_setting_ID_3"
                style="@style/btn_setting_dialog_id"
                android:text="@string/_3" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_dialog_setting_ID_4"
                style="@style/btn_setting_dialog_id"
                android:text="@string/_4" />

            <TextView
                android:id="@+id/btn_dialog_setting_ID_5"
                style="@style/btn_setting_dialog_id"
                android:text="@string/_5" />

            <TextView
                android:id="@+id/btn_dialog_setting_ID_6"
                style="@style/btn_setting_dialog_id"
                android:text="@string/_6" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_dialog_setting_ID_7"
                style="@style/btn_setting_dialog_id"
                android:text="@string/_7" />

            <TextView
                android:id="@+id/btn_dialog_setting_ID_8"
                style="@style/btn_setting_dialog_id"
                android:text="@string/_8" />

            <TextView
                android:id="@+id/btn_dialog_setting_ID_9"
                style="@style/btn_setting_dialog_id"
                android:text="@string/_9" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_dialog_setting_ID_cancel"
                style="@style/btn_setting_dialog_id"
                android:text="X" />

            <TextView
                android:id="@+id/btn_dialog_setting_ID_0"
                style="@style/btn_setting_dialog_id"
                android:text="@string/_0" />

            <TextView
                android:id="@+id/btn_dialog_setting_ID_OK"
                style="@style/btn_setting_dialog_id"
                android:text="OK" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>