<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.navigation.NavigationView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rtu_sidebar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/ble_toolbarmain"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_Navigation_Move"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >

            <include layout="@layout/drawer_header"/>

            <LinearLayout
                android:id="@+id/ll_navigation_gps"
                android:layout_width="match_parent"
                android:layout_height="50.8dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingStart="15dp"
                    android:text="GPS Set (GPS 설정)"
                    android:autoSizeTextType="uniform"
                    android:textColor="@color/navigation_text"
                    android:padding="10dp"/>

                <View style="@style/view_vertical_line"  />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_Navigation_Move_Ble"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:visibility="gone"
                >
<!--
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_ble" />-->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:paddingStart="15dp"
                    android:text="Bluetooth"
                    android:autoSizeTextType="uniform"
                    android:textColor="@color/navigation_text"
                    android:padding="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_Navigation_Move_RTU"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:visibility="gone"
                >
                <!--<ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_rtu"/>-->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:paddingStart="15dp"
                    android:text="RTU"
                    android:textColor="@color/navigation_text"
                    android:autoSizeTextType="uniform"
                    android:padding="10dp"/>
            </LinearLayout>

            

            <LinearLayout
                android:id="@+id/ll_Navigation_Show_Language"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >
                <!--<ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/language_eng_on"/>-->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:paddingStart="15dp"
                    android:text="Language (언어)"
                    android:autoSizeTextType="uniform"
                    android:textColor="@color/navigation_text"
                    android:padding="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_Navigation_Password_Change"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <!--<ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/language_eng_on"/>-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:paddingStart="15dp"
                    android:text="PasswordChange\n(비밀번호 변경)"
                    android:autoSizeTextType="uniform"
                    android:textColor="@color/navigation_text"
                    android:padding="10dp"/>
                <View style="@style/view_vertical_line"  />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_Navigation_ModeSelect"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:visibility="gone"
                >
                <!--<ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/language_eng_on"/>-->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:paddingStart="15dp"
                    android:text="ModeSelect\n(모드 선택)"
                    android:autoSizeTextType="uniform"
                    android:textColor="@color/navigation_text"
                    android:padding="10dp"/>
            </LinearLayout>

            <View style="@style/view_vertical_line"  />
            
<!--            필요 없을거 같다하여-->
            <LinearLayout
                android:id="@+id/ll_Navigation_Show_FL_List"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:visibility="gone"
                >
                <!--<ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_fl_list"/>-->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:paddingStart="15dp"
                    android:text="FL List"
                    android:autoSizeTextType="uniform"
                    android:textColor="@color/navigation_text"
                    android:padding="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_Navigation_Show_Log"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >
                <!--<ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_log"/>-->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:paddingStart="15dp"
                    android:text="Log (기록)"
                    android:autoSizeTextType="uniform"
                    android:textColor="@color/navigation_text"
                    android:padding="10dp"/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_Navigation_Log"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="40dp"
            android:visibility="invisible">

            <ListView
                android:id="@+id/lv_Navigation_Log"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:transcriptMode="normal"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/btn_Navigation_Log_Close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_navigation_log_btn"
                android:layout_margin="1dp"
                android:text="@string/log_close"/>

        </LinearLayout>

    </LinearLayout>


</com.google.android.material.navigation.NavigationView>