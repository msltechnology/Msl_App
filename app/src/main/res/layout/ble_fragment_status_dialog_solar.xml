<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/custom_ble_status_dialog_background"
    android:paddingTop="10dp">


    <View style="@style/view_vertical_line_5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/tv_ble_fragment_status_dialog_Solar_sol_name"
                android:text="@string/tv_ble_fragment_status_dialog_solar_sol1"/>
            <View style="@style/view_horizontal_line_5" />
            <TextView
                style="@style/tv_ble_fragment_status_dialog_Solar_sol_name"
                android:text="@string/tv_ble_fragment_status_dialog_solar_sol2"/>
            <View style="@style/view_horizontal_line_5" />
            <TextView
                style="@style/tv_ble_fragment_status_dialog_Solar_sol_name"
                android:text="@string/tv_ble_fragment_status_dialog_solar_sol3"/>

        </LinearLayout>

        <View style="@style/view_vertical_line_5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_ble_fragment_status_dialog_Solar_sol1"
                style="@style/iv_ble_fragment_status_dialog_Solar"
                />
            <View style="@style/view_horizontal_line_5" />
            <ImageView
                android:id="@+id/iv_ble_fragment_status_dialog_Solar_sol2"
                style="@style/iv_ble_fragment_status_dialog_Solar"
                />
            <View style="@style/view_horizontal_line_5" />
            <ImageView
                android:id="@+id/iv_ble_fragment_status_dialog_Solar_sol3"
                style="@style/iv_ble_fragment_status_dialog_Solar"
                />

        </LinearLayout>
        <View style="@style/view_vertical_line_5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_ble_fragment_status_dialog_Solar_sol_value1"
                style="@style/tv_ble_fragment_status_dialog_Solar_sol_name"/>
            <View style="@style/view_horizontal_line_5" />
            <TextView
                android:id="@+id/tv_ble_fragment_status_dialog_Solar_sol_value2"
                style="@style/tv_ble_fragment_status_dialog_Solar_sol_name"/>
            <View style="@style/view_horizontal_line_5" />
            <TextView
                android:id="@+id/tv_ble_fragment_status_dialog_Solar_sol_value3"
                style="@style/tv_ble_fragment_status_dialog_Solar_sol_name"/>

        </LinearLayout>

    </LinearLayout>
    <View style="@style/view_vertical_line_5" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/tv_ble_fragment_status_dialog_Solar_sol_name"
                android:text="@string/tv_ble_fragment_status_dialog_solar_sol4"/>
            <View style="@style/view_horizontal_line_5" />
            <TextView
                style="@style/tv_ble_fragment_status_dialog_Solar_sol_name"
