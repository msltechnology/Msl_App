            </LinearLayout>

            <View style="@style/view_vertical_line_5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_ble_fragment_status_dialog_Solar_sol4"
                    style="@style/iv_ble_fragment_status_dialog_Solar"
                    app:imgRes="@{bleViewModel.bleSolarV_iv_4}"/>

                <View style="@style/view_horizontal_line_5" />

                <ImageView
                    android:id="@+id/iv_ble_fragment_status_dialog_Solar_sol5"
                    style="@style/iv_ble_fragment_status_dialog_Solar"
                    app:imgRes="@{bleViewModel.bleSolarV_iv_5}"/>

                <View style="@style/view_horizontal_line_5" />

                <ImageView
                    android:id="@+id/iv_ble_fragment_status_dialog_Solar_sol6"
                    style="@style/iv_ble_fragment_status_dialog_Solar"
                    app:imgRes="@{bleViewModel.bleSolarV_iv_6}"/>

            </LinearLayout>

            <View style="@style/view_vertical_line_5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_ble_fragment_status_dialog_Solar_sol_value4"
