                <View style="@style/view_horizontal_line_5" />

                <TextView
                    android:id="@+id/tv_ble_fragment_status_dialog_Solar_sol_value3"
                    style="@style/tv_ble_fragment_status_dialog_Solar_sol_name"
                    android:text="@{bleViewModel.bleSolarV_3}"/>

            </LinearLayout>

            <View style="@style/view_vertical_line_5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_ble_fragment_status_dialog_Solar_sol_value1_a"
                    style="@style/tv_ble_fragment_status_dialog_Solar_sol_name"
                    android:text="@{bleViewModel.bleSolarA_1}"/>

                <View style="@style/view_horizontal_line_5" />

                <TextView
                    android:id="@+id/tv_ble_fragment_status_dialog_Solar_sol_value2_a"
