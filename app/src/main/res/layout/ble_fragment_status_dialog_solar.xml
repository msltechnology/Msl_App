                    android:text="@{bleViewModel.bleSolarA_6}"/>

            </LinearLayout>

            <View style="@style/view_vertical_line_5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/btn_dialogFragment_Ble_Status_Solar_callStatus_v"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_margin="5dp"
                android:background="@drawable/custom_ble_status_call_btn"
                android:text="@string/v_status"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_dialogFragment_Ble_Status_Solar_callStatus_a"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_margin="5dp"
                android:background="@drawable/custom_ble_status_call_btn"
                android:text="@string/a_status"
                android:textSize="16sp" />


        </LinearLayout>


    </LinearLayout>
</layout>