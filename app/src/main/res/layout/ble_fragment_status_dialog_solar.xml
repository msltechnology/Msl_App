                    style="@style/tv_ble_fragment_status_dialog_Solar_sol_name"
                    android:text="@{bleViewModel.bleSolarA_3}"/>

            </LinearLayout>

        </LinearLayout>

        <View style="@style/view_vertical_line_5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/tv_ble_fragment_status_dialog_Solar_sol_name"
                    android:text="@string/tv_ble_fragment_status_dialog_solar_sol4" />

                <View style="@style/view_horizontal_line_5" />

                <TextView
                    style="@style/tv_ble_fragment_status_dialog_Solar_sol_name"
                    android:text="@string/tv_ble_fragment_status_dialog_solar_sol5" />

                <View style="@style/view_horizontal_line_5" />

                <TextView
                    style="@style/tv_ble_fragment_status_dialog_Solar_sol_name"
