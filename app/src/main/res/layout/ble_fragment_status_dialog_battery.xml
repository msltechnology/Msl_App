<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="bleViewModel"
            type="com.msl.mslapp.ble.BleViewModel" />

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_ble_status_dialog_background"
        android:orientation="vertical"
        android:paddingTop="10dp">


        <View style="@style/view_vertical_line_5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/tv_ble_fragment_status_dialog_battery_bat_name"
                    android:text="@string/tv_ble_fragment_status_dialog_battery_bat1" />

                <View style="@style/view_horizontal_line_5" />

                <TextView
                    style="@style/tv_ble_fragment_status_dialog_battery_bat_name"
                    android:text="@string/tv_ble_fragment_status_dialog_battery_bat2" />

                <View style="@style/view_horizontal_line_5" />

                <TextView
                    style="@style/tv_ble_fragment_status_dialog_battery_bat_name"
                    android:text="@string/tv_ble_fragment_status_dialog_battery_bat3" />

            </LinearLayout>

            <View style="@style/view_vertical_line_5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_ble_fragment_status_dialog_battery_bat1"
                    style="@style/iv_ble_fragment_status_dialog_battery"
                    app:imgRes="@{bleViewModel.bleBattery_iv_1}"/>


                <View style="@style/view_horizontal_line_5" />

                <ImageView
                    android:id="@+id/iv_ble_fragment_status_dialog_battery_bat2"
                    style="@style/iv_ble_fragment_status_dialog_battery"
                    app:imgRes="@{bleViewModel.bleBattery_iv_2}" />

                <View style="@style/view_horizontal_line_5" />

                <ImageView
                    android:id="@+id/iv_ble_fragment_status_dialog_battery_bat3"
                    style="@style/iv_ble_fragment_status_dialog_battery"
                    app:imgRes="@{bleViewModel.bleBattery_iv_3}" />

            </LinearLayout>

            <View style="@style/view_vertical_line_5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_ble_fragment_status_dialog_battery_bat_value1"
                    style="@style/tv_ble_fragment_status_dialog_battery_bat_name"
                    android:text="@{bleViewModel.bleBattery_1}"
                    />

                <View style="@style/view_horizontal_line_5" />

                <TextView
                    android:id="@+id/tv_ble_fragment_status_dialog_battery_bat_value2"
                    style="@style/tv_ble_fragment_status_dialog_battery_bat_name"
                    android:text="@{bleViewModel.bleBattery_2}"/>

                <View style="@style/view_horizontal_line_5" />

                <TextView
                    android:id="@+id/tv_ble_fragment_status_dialog_battery_bat_value3"
                    style="@style/tv_ble_fragment_status_dialog_battery_bat_name"
                    android:text="@{bleViewModel.bleBattery_3}"/>

            </LinearLayout>

        </LinearLayout>

        <View style="@style/view_vertical_line_5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/tv_ble_fragment_status_dialog_battery_bat_name"
                    android:text="@string/tv_ble_fragment_status_dialog_battery_bat4" />

                <View style="@style/view_horizontal_line_5" />

                <TextView
                    style="@style/tv_ble_fragment_status_dialog_battery_bat_name"
                    android:text="@string/tv_ble_fragment_status_dialog_battery_bat5" />

                <View style="@style/view_horizontal_line_5" />

                <TextView
                    style="@style/tv_ble_fragment_status_dialog_battery_bat_name"
                    android:text="@string/tv_ble_fragment_status_dialog_battery_bat6" />

            </LinearLayout>

            <View style="@style/view_vertical_line_5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_ble_fragment_status_dialog_battery_bat4"
                    style="@style/iv_ble_fragment_status_dialog_battery"
                    app:imgRes="@{bleViewModel.bleBattery_iv_4}" />

                <View style="@style/view_horizontal_line_5" />

                <ImageView
                    android:id="@+id/iv_ble_fragment_status_dialog_battery_bat5"
                    style="@style/iv_ble_fragment_status_dialog_battery"
                    app:imgRes="@{bleViewModel.bleBattery_iv_5}" />

                <View style="@style/view_horizontal_line_5" />

                <ImageView
                    android:id="@+id/iv_ble_fragment_status_dialog_battery_bat6"
                    style="@style/iv_ble_fragment_status_dialog_battery"
                    app:imgRes="@{bleViewModel.bleBattery_iv_6}" />

            </LinearLayout>

            <View style="@style/view_vertical_line_5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_ble_fragment_status_dialog_battery_bat_value4"
                    style="@style/tv_ble_fragment_status_dialog_battery_bat_name"
                    android:text="@{bleViewModel.bleBattery_4}"/>

                <View style="@style/view_horizontal_line_5" />

                <TextView
                    android:id="@+id/tv_ble_fragment_status_dialog_battery_bat_value5"
                    style="@style/tv_ble_fragment_status_dialog_battery_bat_name"
                    android:text="@{bleViewModel.bleBattery_5}"/>

                <View style="@style/view_horizontal_line_5" />

                <TextView
                    android:id="@+id/tv_ble_fragment_status_dialog_battery_bat_value6"
                    style="@style/tv_ble_fragment_status_dialog_battery_bat_name"
                    android:text="@{bleViewModel.bleBattery_6}"/>

            </LinearLayout>

            <View style="@style/view_vertical_line_5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_dialogFragment_Ble_Status_Battery_callStatus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="3"
                android:background="@drawable/custom_ble_status_call_btn"
                android:text="@string/once_status"
                android:textSize="16sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>


    </LinearLayout>
</layout>