<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_ble_status_dialog_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:autoSizeTextType="uniform"
        android:background="@color/MSL_Blue"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/Delay_Time_change"
        android:textColor="@color/white"
        android:textStyle="bold" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            />

        <ImageView
            android:id="@+id/ll_dialog_delaytime_sigh"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

        </ImageView>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"/>

        <LinearLayout
            android:id="@+id/ll_delaytime_tiem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/ll_dialog_delaytime_hundred"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_dialog_delaytime_hundred"
                    style="@style/tv_setting_dialog_id"
                    android:text="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:autoSizeTextType="uniform"
                    android:gravity="bottom"
                    android:text="." />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_dialog_delaytime_ten"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_dialog_delaytime_ten"
                    style="@style/tv_setting_dialog_id"
                    android:text="0" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_dialog_delaytime_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_dialog_delaytime_one"
                    style="@style/tv_setting_dialog_id"
                    android:text="0" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/tv_setting_dialog_id"
                android:textSize="24dp"
                android:text="@string/Second_Sec" />

        </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                tools:ignore="NestedWeights">

                <TextView
                    android:id="@+id/btn_dialog_setting_ID_1"
                    style="@style/btn_setting_dialog_delay_key"
                    android:text="@string/_1" />

                <TextView
                    android:id="@+id/btn_dialog_setting_ID_2"
                    style="@style/btn_setting_dialog_delay_key"
                    android:text="@string/_2" />

                <TextView
                    android:id="@+id/btn_dialog_setting_ID_3"
                    style="@style/btn_setting_dialog_delay_key"
                    android:text="@string/_3" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_dialog_setting_ID_4"
                    style="@style/btn_setting_dialog_delay_key"
                    android:text="@string/_4" />

                <TextView
                    android:id="@+id/btn_dialog_setting_ID_5"
                    style="@style/btn_setting_dialog_delay_key"
                    android:text="@string/_5" />

                <TextView
                    android:id="@+id/btn_dialog_setting_ID_6"
                    style="@style/btn_setting_dialog_delay_key"
                    android:text="@string/_6" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_dialog_setting_ID_7"
                    style="@style/btn_setting_dialog_delay_key"
                    android:text="@string/_7" />

                <TextView
                    android:id="@+id/btn_dialog_setting_ID_8"
                    style="@style/btn_setting_dialog_delay_key"
                    android:text="@string/_8" />

                <TextView
                    android:id="@+id/btn_dialog_setting_ID_9"
                    style="@style/btn_setting_dialog_delay_key"
                    android:text="@string/_9" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/btn_dialog_setting_ID_cancel"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:src="@drawable/icon_backpress"
                            />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            />



                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/btn_dialog_setting_ID_0"
                    style="@style/btn_setting_dialog_delay_key"
                    android:text="@string/_0" />

                <TextView
                    android:id="@+id/btn_dialog_setting_ID_OK"
                    style="@style/btn_setting_dialog_delay_key"
                    android:text="OK" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"/>
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"/>
    </LinearLayout>

</LinearLayout>