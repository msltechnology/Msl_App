<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rtuFunctionBack"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_rtu_send"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/custom_rtu_status_call_btn"
            android:text="@string/rtu_send" />

        <Button
            android:id="@+id/btn_rtu_status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/custom_rtu_status_call_btn"
            android:text="@string/rtu_status" />

    </LinearLayout>

    <View style="@style/rtu_view_vertical_line_5"  />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:textSize="20dp" />

        </LinearLayout>

        <View style="@style/rtu_view_vertical_line_5"  />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/rtu_tv_status_name"
                    android:text="@string/RTU_ID" />

                <View style="@style/rtu_view_horizontal_line_5"  />

                <TextView
                    android:id="@+id/tv_DevId"
                    style="@style/rtu_tv_status_value"/>


                <Button
                    android:id="@+id/btn_DevId"
                    style="@style/rtu_btn_status_change"
                    android:text="@string/change" />

            </LinearLayout>

            <View style="@style/rtu_view_vertical_line_5"  />

            <LinearLayout
                android:id="@+id/ll_rtu_fragment_status_lantern_ID"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/rtu_tv_status_name"
                    android:text="@string/lantern_id" />

                <View style="@style/rtu_view_horizontal_line_5"  />

                <TextView
                    android:id="@+id/tv_LanternId"
                    style="@style/rtu_tv_status_value"/>


                <Button
                    android:id="@+id/btn_LanternId"
                    style="@style/rtu_btn_status_change"
                    android:text="@string/change"/>

            </LinearLayout>

            <View
                android:id="@+id/view_rtu_fragment_status_lantern_ID"
                style="@style/rtu_view_vertical_line_5"  />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/rtu_tv_status_name"
                    android:text="@string/send_cycle" />

                <View style="@style/rtu_view_horizontal_line_5"  />

                <TextView
                    android:id="@+id/tv_Status_Interval"
                    style="@style/rtu_tv_status_value"/>


                <Button
                    android:id="@+id/btn_Status_Interval"
                    style="@style/rtu_btn_status_change"
                    android:text="@string/change" />

            </LinearLayout>

            <View style="@style/rtu_view_vertical_line_5"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/rtu_tv_status_name"
                    android:text="@string/reset_cycle" />

                <View style="@style/rtu_view_horizontal_line_5"  />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_reset_Interval_1"
                        style="@style/rtu_tv_status_value"/>

                    <View style="@style/rtu_view_horizontal_line_35"  />

                    <TextView
                        android:id="@+id/tv_reset_Interval_2"
                        style="@style/rtu_tv_status_value"/>

                    <View style="@style/rtu_view_horizontal_line_35"  />

                    <TextView
                        android:id="@+id/tv_reset_Interval_3"
                        style="@style/rtu_tv_status_value"/>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_reset_Interval"
                    style="@style/rtu_btn_status_change"
                    android:text="@string/change" />

            </LinearLayout>

            <View style="@style/rtu_view_vertical_line_5"  />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/rtu_tv_status_name"
                    android:text="@string/server_1"/>

                <View style="@style/rtu_view_horizontal_line_5"  />

                <LinearLayout
                    style="@style/rtu_ll_status_value_ip"
                    >

                    <TextView
                        android:id="@+id/tv_server_1_port"
                        style="@style/rtu_tv_status_value_ip"/>

                    <View style="@style/rtu_view_vertical_line_5"  />

                    <TextView
                        android:id="@+id/tv_server_1_ip"
                        style="@style/rtu_tv_status_value_ip"/>

                </LinearLayout>



                <Button
                    android:id="@+id/btn_server_1"
                    style="@style/rtu_btn_status_change"
                    android:text="@string/change" />

            </LinearLayout>

            <View style="@style/rtu_view_vertical_line_5"  />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/rtu_tv_status_name"
                    android:text="@string/server_2" />

                <View style="@style/rtu_view_horizontal_line_5"  />

                <LinearLayout
                    style="@style/rtu_ll_status_value_ip"
                    >
                    <TextView
                        android:id="@+id/tv_server_2_port"
                        style="@style/rtu_tv_status_value_ip"/>

                    <View style="@style/rtu_view_vertical_line_5"  />

                    <TextView
                        android:id="@+id/tv_server_2_ip"
                        style="@style/rtu_tv_status_value_ip"/>

                </LinearLayout>
                <Button
                    android:id="@+id/btn_server_2"
                    style="@style/rtu_btn_status_change"
                    android:text="@string/change" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>