<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_ble_status_dialog_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="5"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/tv_ble_framgment_password_change_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notice_current_password"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="20dp"
                android:gravity="center" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="horizontal"
            android:baselineAligned="false">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="@drawable/ble_password_shadow_effect"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/password_insert_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/ble_toolbarmain" />

                <TextView
                    android:id="@+id/password_insert_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/ble_toolbarmain" />

                <TextView
                    android:id="@+id/password_insert_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/ble_toolbarmain" />

                <TextView
                    android:id="@+id/password_insert_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/ble_toolbarmain" />

                <TextView
                    android:id="@+id/password_insert_5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/ble_toolbarmain" />


                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                </Space>
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <LinearLayout
            android:id="@+id/password_numboard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="4"
            android:visibility="visible"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/password_key_1"
                        style="@style/password_numboard"
                        android:text="1"/>
                    <TextView
                        android:id="@+id/password_key_2"
                        style="@style/password_numboard"
                        android:text="2"/>
                    <TextView
                        android:id="@+id/password_key_3"
                        style="@style/password_numboard"
                        android:text="3"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/password_key_4"
                        style="@style/password_numboard"
                        android:text="4"/>
                    <TextView
                        android:id="@+id/password_key_5"
                        style="@style/password_numboard"
                        android:text="5"/>
                    <TextView
                        android:id="@+id/password_key_6"
                        style="@style/password_numboard"
                        android:text="6"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/password_key_7"
                        style="@style/password_numboard"
                        android:text="7"/>
                    <TextView
                        android:id="@+id/password_key_8"
                        style="@style/password_numboard"
                        android:text="8"/>
                    <TextView
                        android:id="@+id/password_key_9"
                        style="@style/password_numboard"
                        android:text="9"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/board_change_num"
                        style="@style/password_numboard_2"
                        android:text="ABC"/>
                    <TextView
                        android:id="@+id/password_key_0"
                        style="@style/password_numboard"
                        android:text="0"/>

                    <LinearLayout
                        android:id="@+id/password_num_delete"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:src="@drawable/icon_backpress" />

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />


                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1" />


                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/btn_connect_num"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:autoSizeTextType="uniform"
                        android:padding="15dp"
                        android:text="OK"
                        android:visibility="visible"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                </LinearLayout>




            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/password_keyboard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/password_key_q"
                    style="@style/password_keyboard"
                    android:text="Q" />

                <TextView
                    android:id="@+id/password_key_w"
                    style="@style/password_keyboard"
                    android:text="W" />

                <TextView
                    android:id="@+id/password_key_e"
                    style="@style/password_keyboard"
                    android:text="E" />

                <TextView
                    android:id="@+id/password_key_r"
                    style="@style/password_keyboard"
                    android:text="R" />

                <TextView
                    android:id="@+id/password_key_t"
                    style="@style/password_keyboard"
                    android:text="T" />

                <TextView
                    android:id="@+id/password_key_y"
                    style="@style/password_keyboard"
                    android:text="Y" />

                <TextView
                    android:id="@+id/password_key_u"
                    style="@style/password_keyboard"
                    android:text="U" />

                <TextView
                    android:id="@+id/password_key_i"
                    style="@style/password_keyboard"
                    android:text="I" />

                <TextView
                    android:id="@+id/password_key_o"
                    style="@style/password_keyboard"
                    android:text="O" />

                <TextView
                    android:id="@+id/password_key_p"
                    style="@style/password_keyboard"
                    android:text="P" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="#00FFFFFF"
                    android:text="" />

                <TextView
                    android:id="@+id/password_key_a"
                    style="@style/password_keyboard"
                    android:text="A" />

                <TextView
                    android:id="@+id/password_key_s"
                    style="@style/password_keyboard"
                    android:text="S" />

                <TextView
                    android:id="@+id/password_key_d"
                    style="@style/password_keyboard"
                    android:text="D" />

                <TextView
                    android:id="@+id/password_key_f"
                    style="@style/password_keyboard"
                    android:text="F" />

                <TextView
                    android:id="@+id/password_key_g"
                    style="@style/password_keyboard"
                    android:text="G" />

                <TextView
                    android:id="@+id/password_key_h"
                    style="@style/password_keyboard"
                    android:text="H" />

                <TextView
                    android:id="@+id/password_key_j"
                    style="@style/password_keyboard"
                    android:text="J" />

                <TextView
                    android:id="@+id/password_key_k"
                    style="@style/password_keyboard"
                    android:text="K" />

                <TextView
                    android:id="@+id/password_key_l"
                    style="@style/password_keyboard"
                    android:text="L" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="#00FFFFFF"
                    android:text="" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/password_key_z"

                    style="@style/password_keyboard"
                    android:text="Z" />

                <TextView
                    android:id="@+id/password_key_x"
                    style="@style/password_keyboard"
                    android:text="X" />

                <TextView
                    android:id="@+id/password_key_c"
                    style="@style/password_keyboard"
                    android:text="C" />

                <TextView
                    android:id="@+id/password_key_v"
                    style="@style/password_keyboard"
                    android:text="V" />

                <TextView
                    android:id="@+id/password_key_b"
                    style="@style/password_keyboard"
                    android:text="B" />

                <TextView
                    android:id="@+id/password_key_n"
                    style="@style/password_keyboard"
                    android:text="N" />

                <TextView
                    android:id="@+id/password_key_m"
                    style="@style/password_keyboard"
                    android:text="M" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="5dp">


                <TextView
                    android:id="@+id/board_change_key"
                    style="@style/password_keyboard"
                    android:text="123" />

                <TextView
                    android:id="@+id/btn_connect"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:autoSizeTextType="uniform"
                    android:padding="5dp"
                    android:text="OK"
                    android:visibility="visible"/>

                <!--<Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"/>-->
                <LinearLayout
                    android:id="@+id/password_key_delete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:orientation="horizontal">

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:src="@drawable/icon_backpress" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />


                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>



