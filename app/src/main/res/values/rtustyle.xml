<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="rtu_view_vertical_line_5">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@color/rtu_view_line_color</item>
    </style>

    <style name="rtu_view_horizontal_line_5">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@color/rtu_view_line_color</item>
    </style>

    <style name="rtu_view_horizontal_line_5_3">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">3dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@color/rtu_view_line_color</item>
    </style>

    <style name="rtu_view_horizontal_line_35">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:layout_marginBottom">35dp</item>
        <item name="android:background">@color/rtu_view_line_color</item>
    </style>

    <style name="rtu_tv_status_name">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/custom_rtu_status_title_tv</item>
    </style>

    <style name="rtu_tv_status_value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">4</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/custom_rtu_status_value_tv</item>
    </style>

    <style name="rtu_ll_status">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">6</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:translationZ">1dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:background">@drawable/custom_rtu_status_ll</item>
    </style>

    <style name="rtu_ll_status_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.5</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:translationZ">1dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:background">@drawable/custom_rtu_status_ll</item>
    </style>

    <style name="rtu_ll_status_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="rtu_tv_setting_network_value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">4</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/custom_rtu_status_value_tv</item>
    </style>

    <style name="rtu_ll_status_value_ip">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">4</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="rtu_tv_status_value_ip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="rtu_tv_setting_lantern">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">4</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="rtu_btn_status_change">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.5</item>
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/custom_rtu_status_change_btn</item>
    </style>

    <style name="rtu_btn_status_dialog">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/custom_rtu_status_change_btn</item>
    </style>


</resources>